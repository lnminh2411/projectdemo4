@model Project_Real__estate.Models.Agent

@{
    ViewBag.Title = "AgentDetails";
    Layout = "~/Views/Shared/_LayoutSingle.cshtml";
}

<h2>AgentDetails</h2>

<div>
    <h4>Agent</h4>
    <hr />
    <div class="row justify-content-md-start">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Welcome
                </div>
                <div class="card-body">
                    @if (Session["AgentId"] != null)
                    {
                        <p>Name: @Session["AgentName"]</p>
                        <p>Email: @Session["Email"]</p>
                        <p>Birthdate: @Session["Introduction"]</p>
                        <p>Phone: @Session["Phone"]</p>
                        <p>Address: @Session["Address"]</p>
                        <p>Email status: @Session["EmailHide"]</p>
                        <p>Activate: @Session["isActivate"]</p>
                        <p>Payment: @Session["paymentId"]</p>

                    }
                </div>
            </div>

        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AgentId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
